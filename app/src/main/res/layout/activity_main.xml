<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.ciza.lighter.activities.MainActivity"
    android:background="@color/colorPrimary"
    android:padding="@dimen/halfSpace"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_illumine_title"
        android:layout_marginBottom="@dimen/halfSpace"
        android:src="@drawable/illumine_title"/>

    <ImageView
        android:id="@+id/activity_main_displayImage"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:layout_marginBottom="@dimen/halfSpace"
        android:src="@drawable/burning_torch" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/activity_main_switchButton"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="@dimen/basePadding"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:src="@drawable/oner" />

        <ImageButton
            android:id="@+id/activity_main_settingsButton"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="@dimen/basePadding"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:src="@drawable/setting_wheel" />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main_adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/halfSpace"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_id" />
</LinearLayout>
